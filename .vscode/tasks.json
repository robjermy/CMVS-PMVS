{
  "tasks": [
    {
      "type": "shell",
      "label": "CMake (Debug)",
      "command": "cmake",
      "args": [
        "-DCMAKE_BUILD_TYPE=Debug",
        ".."
      ],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "group": "build"
    },
    {
      "type": "shell",
      "label": "CMake (Release)",
      "command": "cmake",
      "args": [
        "-DCMAKE_BUILD_TYPE=Release",
        ".."
      ],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "group": "build"
    },
    {
      "type": "shell",
      "label": "CMake Build",
      "command": "cmake",
      "args": [
        "--build",
        ".",
        "-j8"
      ],
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}
